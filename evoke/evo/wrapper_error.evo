# message, warning, or error display
div: cls="row", 
  div: id='popup',cls="col-md-12 "
    for m in ('message','warning','error'):
      if req.get(m):
        div:id=m
          req[m]
          # link to close popup
          a:"&times;", href="#", onclick=f"document.getElementById('{m}').style.display='none';return;"
